@using SevenTiny.Cloud.Account.Core.Entity;
@using SevenTiny.Cloud.Account.Core.Enum;

@{
    ViewData["Title"] = "List";
 Layout = "~/Views/Shared/_LayoutHeaderStyle.cshtml";
 List<UserAccount> metaObjects = Model as List<UserAccount> ?? new List<UserAccount>();
}

<article class="cl pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="l">
            <a class="btn btn-primary radius" href="/UserAccount/AddAccount"><i class="Hui-iconfont">&#xe600;</i> 新建对象</a>
        </span>
        <span class="r">共有数据：<strong>@metaObjects.Count</strong> 条</span>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
            <thead>
                <tr class="text-c">
                    <th>UserId</th>
                    <th>姓名</th>
                    <th>邮箱</th>
                    <th>系统身份</th>
                    <th>描述</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in metaObjects)
                {
                    <tr class="text-c">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@SystemIdentityTranslator.ToChinese(item.SystemIdentity)</td>
                        <td>@item.Description</td>
                        <!--<td class="td-status"><span class="label label-success radius">发布</span></td>-->
                        <td class="f-14 td-manage">
                            <a style="text-decoration: none" class="ml-5" href="/UserAccount/EditByAdministrator/@item.Id" title="编辑" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6df;</i></a>
                            <a style="text-decoration: none" class="ml-5" onClick="ajax_delete_table(this, '/UserAccount/Delete/@item.Id')" href="javascript:;" title="删除" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6e2;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>

@await Html.PartialAsync($"~/Views/Shared/_FooterScripts.cshtml")
@await Html.PartialAsync($"~/Views/Shared/_CommonScript.cshtml")
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[50, 100, -1], ["50", "100", "All"]],//二组数组，第一组数量，
        "aaSorting": [[4, "asc"], [0, "asc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            //{ "bVisible": false, "aTargets": [0] }, //控制列的隐藏显示
            { "orderable": false, "aTargets": [5] }// 不参与排序的列
        ]
    });
</script>
